    "@nestjs/jwt": "^7.0.0",
    "@nestjs/mongoose": "^6.4.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-fastify": "^7.0.0",
    "@nestjs/schedule": "^0.3.0",
    "@nestjs/serve-static": "^2.1.0",
    "@slack/webhook": "^5.0.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "date-fns": "^2.10.0",
    "fastify-cookie": "^3.6.0",
    "fastify-cors": "^3.0.2",
    "fastify-file-upload": "^2.0.1",
    "fastify-static": "^2.6.0",
    "helmet": "^3.21.3",
