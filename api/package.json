    "passport-local": "^1.0.0",
    "passport-localapikey-update": "^0.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "slug": "^2.1.1",
    "string-similarity": "^4.0.1",
    "uuid": "^7.0.2",
    "xml-js": "^1.6.11"
